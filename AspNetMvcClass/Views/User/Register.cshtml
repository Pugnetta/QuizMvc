@model AspNetMvcClass.Models.ViewModels.RegisterUserViewModel
@{
	ViewData["Title"] = "Registrazione";
}
<div class="container mt-5">
	<div class="row justify-content-center align-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Registrati</h1>
			<form method="post" action="Register">
				<div asp-validation-summary="All" class="text-danger"> </div>
				<div class="mb-3">
					<label for="" class="form-label">Email</label>
					<input type="text" placeholder="Inserisci Email" class="form-control" asp-for="Email">
					<span class="text-danger" asp-validation-for="Email"></span>
				</div>
				<div class="mb-3">
					<label for="" class="form-label">Password</label>
					<input type="password" placeholder="Inserisci Password" class="form-control" asp-for="Password">
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>
				<div class="mb-3">
					<label for="" class="form-label">Conferma Password</label>
					<input type="password" placeholder="Conferma Password" class="form-control" asp-for="ConfirmPassword">
					<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Registrati</button>
				</div>
			</form>
		</div>
	</div>
</div>