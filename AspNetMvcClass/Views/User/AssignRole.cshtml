@model AspNetMvcClass.Models.ViewModels.AssignRoleViewModel

<h1>Assign Role</h1>

@using (Html.BeginForm("AssignRole", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.UserEmail)
        @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.RoleName)
        @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mb-3">Assign Role</button>
}