@model AspNetMvcClass.Models.Domain.Domanda

@{
	ViewBag.Title = "Quiz";
}
<style>
	

	.big-btn {
		margin: 3px;
		height: 100%;
		width: 100%;
		text-align: center;
		display: block;
		overflow: auto;
		margin-left: auto;
		margin-right: auto;
	}

</style>

<div class="quiz-game-page">
	<div class="container">
		<div class="card-header mb-3">
			<h3>@Model.Question</h3>
		</div>
		<div class="">
			<form method="post" asp-controller="Quiz" asp-action="QuizViews">
				<input type="hidden" name="answer" id="answerInput" />
				<button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('@Model.Risposta1'); this.form.submit()">@Model.Risposta1</button>
				<button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('@Model.Risposta2'); this.form.submit()">@Model.Risposta2</button>
				<button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('@Model.Risposta3'); this.form.submit()">@Model.Risposta3</button>
				<button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('@Model.Risposta4'); this.form.submit()">@Model.Risposta4</button>
			</form>
		</div>
	</div>
</div>
<script>
	function setAnswer(answer) {
		document.getElementById('answerInput').value = answer;
	}
</script>
