@{
	ViewData["Title"] = "QuizMenu";
}

<style>
    h1 {
        font-size: clamp(1rem, 1rem + 3vw, 6rem);
        text-align: center;
	}

    .big-btn {
        margin: 3px;
        height: 100%;
        width: 100%;
        text-align: center;
        display: block;
        overflow: auto;
        margin-left: auto;
        margin-right: auto;
    }

 
 
</style>

<body class="bg-img-ambiente2">
	<header>
		<div class="container">
			<h1 class="text-light">Metti alla prova le tue conoscenze</h1>
			<h1 class="text-light">ed ottieni straordinari <strong>PREMI!!</strong></h1>
		</div>
	</header>	

	<div class="main-content">
		<div class="grid-container">
			<form method="post" asp-controller="Quiz" asp-action="InitializeQuizSession">
				<input type="hidden" name="category" id="categoryInput" />
                <button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('matematica'); this.form.submit()">Matematica</button>
                <button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('geografia'); this.form.submit()">Geografia</button>
                <button class="big-btn gradient-button gradient-button-1" onclick="setAnswer('scienza'); this.form.submit()">Scienza</button>
                <button class="big-btn gradient-button gradient-button-1" onclick="setAnswer(category: null); this.form.submit()">Generale</button>
			</form>
		</div>
	</div>
</body>

<script>
	function setAnswer(category) {
		document.getElementById('categoryInput').value = category;
	}
</script>
